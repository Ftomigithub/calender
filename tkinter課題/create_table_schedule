create table schedule(
  id        int             NOT NULL AUTO_INCREMENT,
  days      date            NOT NULL,
  kindsID   int             ,
  userID    int             ,
  memo      nvarchar(255)   NOT NULL,
  primary key(id),
  foreign key(kindsID) references kind(kindsID),
  foreign key(userID) references users(userID)
);




create table kind(
  kindsID   int             NOT NULL,
  kinds     nvarchar(10)    ,
  primary key(kindsID)
);

insert into kind values(1, '学校');
insert into kind values(2, '試験');
insert into kind values(3, '課題');
insert into kind values(4, '行事');
insert into kind values(5, '就活');
insert into kind values(6, 'アルバイト');
insert into kind values(7, '旅行');

create table users(
  userID    int             NOT NULL AUTO_INCREMENT,
  user      nvarchar(30)    NOT NULL,
  password  nvarchar(30)    NOT NULL,
  primary key(userID)
);

insert into users(user, password) values('hoge', 'hoge');


insert into schedule(days, kindsID, userID, memo) values('2022-6-6', 1, 1, 'hoge');
insert into schedule(days, kindsID, userID, memo) values('2022-6-6', 1, 1, 'hogehoge');
